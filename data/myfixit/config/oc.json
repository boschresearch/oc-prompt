{
  "source_path": "data/myfixit/sample_template",
  "target_path": "data/myfixit/target/oc",
  "env_files": [
    "data/env/azure_openai_gpt4o.env",
    "data/env/azure_openai_gpt4o_mini.env",
    "data/env/ollama_mistral.env"
  ],
  "max_files": "",
  "reset": false,
  "prefix_split": 2,
  "filename_pattern": "{prefix}_{base_title}_{target_title}",
  "prompts": [
    {
      "name": "expand_instruction",
      "template_file": "english/oc.md",
      "input": {
        "instruction_a": {
          "source": "base_steps"
        },
        "outcome_a": {
          "source": "base_title"
        },
        "outcome_b": {
          "source": "target_title"
        }
      },
      "output_key": "source_steps",
      "file_suffix": "_1",
      "preserve_fields": []
    },
    {
      "name": "compact_instruction",
      "template_file": "english/oc.md",
      "input": {
        "instruction_b": {
          "source": "source_steps"
        },
        "outcome_b": {
          "source": "target_title"
        }
      },
      "output_key": "compacted_steps",
      "file_suffix": "_2",
      "preserve_fields": []
    },
    {
      "name": "transfer_instruction",
      "template_file": "english/oc.md",
      "input": {
        "instruction_a": {
          "source": "base_steps"
        },
        "instruction_b": {
          "source": "compacted_steps"
        },
        "outcome_b": {
          "source": "target_title"
        }
      },
      "output_key": "target_steps",
      "file_suffix": "",
      "preserve_fields": [
        "base_title",
        "base_steps",
        "base_component",
        "target_title",
        "target_component"
      ]
    }
  ]
}
